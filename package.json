{
  "name": "node-vcr",
  "version": "1.0.0",
  "description": "nodejs npm package boilerplate",
  "main": "./lib/index.js",
  "scripts": {
    "build": "node_modules/.bin/babel src -d lib",
    "ci": "NODE_ENV=test node_modules/.bin/jest --watch",
    "deps": "node_modules/.bin/npm-check -u",
    "deps:prod": "node_modules/.bin/npm-check -s",
    "dev": "NODE_ENV=development node_modules/.bin/nodemon ./src/index.js",
    "jsdoc": "node_modules/.bin/jsdoc -c jsdoc.config.json",
    "lint": "node_modules/.bin/eslint .",
    "prepublish": "npm run build",
    "test": "NODE_ENV=test node_modules/.bin/jest"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/mbaertschi/node-vcr"
  },
  "keywords": [
    "nodejs",
    "npm",
    "boilerplate"
  ],
  "author": "Michael BÃ¤rtschi <michael.baertschi@zebbra.ch> (http://zebbra.ch)",
  "license": "MIT",
  "engines": {
    "node": ">=8.9.x"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "docdash": "^0.4.0",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^23.0.0-alpha.0",
    "jest-cli": "^23.0.0-alpha.0",
    "jest-junit": "^3.6.0",
    "jest-plugins": "^2.7.0",
    "jest-plugins-recommended": "^2.7.0",
    "jsdoc": "^3.5.5",
    "nodemon": "^1.17.2",
    "npm-check": "^5.5.2",
    "pre-commit": "^1.2.2"
  },
  "dependencies": {
    "debug": "^3.1.0"
  },
  "jest": {
    "rootDir": ".",
    "roots": [
      "<rootDir>/test/"
    ],
    "testEnvironment": "<rootDir>/test/sandbox.js",
    "globalSetup": "<rootDir>/test/setup.js",
    "globalTeardown": "<rootDir>/test/teardown.js",
    "collectCoverage": true,
    "coverageDirectory": "reports/coverage",
    "testResultsProcessor": "jest-junit",
    "setupTestFrameworkScriptFile": "<rootDir>/test/global.config.js"
  },
  "jest-junit": {
    "output": "reports/junit/js-test-results.xml"
  },
  "pre-commit": [
    "deps:prod",
    "test",
    "lint",
    "jsdoc"
  ]
}
